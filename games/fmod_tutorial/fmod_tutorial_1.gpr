project Fmod_Tutorial_1 is

   for Source_Dirs use ("src", "../fmod_api/core/inc");
   for Object_Dir use "obj";
   for Main use ("main.cpp");
   for Languages use ("C++");

   package Compiler is
      for Switches ("c++") use ("-I../../fmod_api/core/inc");
   end Compiler;

   package Linker is
      for Switches ("c++") use ("-L../fmod_api/core/lib", "-lfmodL");
   end Linker;

end Fmod_Tutorial_1;

