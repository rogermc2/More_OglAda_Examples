with "../../common/common.gpr";
with "../../../opengl.gpr";
limited with "../../../opengl-glfw.gpr";

project Feedback_Example is

   for Source_Dirs use ("src", "../common/**", "../magick", "../sys");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("feedback.adb");

   package Compiler renames Opengl.Compiler;

   package Builder is
     for Switches ("ada") use ("-g");
end Builder;

   package Linker is
     for Switches ("ada") use ("-L", "/Applications_Packages/assimp-4.1.0/lib/Debug", "-lassimp", "-L/usr/local/lib", "-lMagick++-7.Q16HDRI", "-lMagickCore-7.Q16HDRI", "-g");
   end Linker;

end Feedback_Example;

