with "../../common/common.gpr";
with "../../../OpenGLAda/opengl.gpr";
limited with "../../../OpenGLAda/opengl-glfw.gpr";

project Spot_Lighting is

   for Source_Dirs use ("src", "../common/**", "../magick", "../sys");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("spot_light");

    for Languages use ("Ada", "C++");

    package Compiler is
        for Switches ("c++") use ("-I/usr/local/include", "-I/usr/local/include/assimp", "-I/usr/local/include/ImageMagick-7/Magick++", "-I/usr/local/include/ImageMagick-7", "-DMAGICKCORE_QUANTUM_DEPTH=16", "-DMAGICKCORE_HDRI_ENABLE=1", "-g");
    end Compiler;

    package Naming is
        for Spec_Suffix ("C++") use ".h";
    end Naming;

   package Builder is
      for Switches ("ada") use ("-g");
   end Builder;

   package Linker is
        for Switches ("ada") use ("-L/usr/local/lib", "-lMagick++-7.Q16HDRI", "-lMagickCore-7.Q16HDRI", "-g");
   end Linker;

end Spot_Lighting;

