with "../../common/common.gpr";
with "../../../OpenGLAda/opengl.gpr";
limited with "../../../OpenGLAda/opengl-glfw.gpr";

project Camera_Space is

   for Source_Dirs use ("src", "../common/**");
   for Object_Dir use "obj";
   for Exec_Dir use ".";
   for Main use ("camera_world.adb");
   for Languages use ("Ada");

   package Builder is
      for Switches ("ada") use ("-g");
   end Builder;

   package Linker is
      for Switches ("ada") use ("-L/usr/local/lib", "-g");
   end Linker;

   package Compiler is
      for Switches ("ada") use ("-gnatw.cfkmu");
   end Compiler;

end Camera_Space;

